        <script>
           
            $(document).ready(function() {
                $('#datepicker').datepicker({
                    format: 'mm/dd/yyyy',
                    startDate: new Date(),
                    autoclose: true
                });

                
                $('#recurring').change(function() {
                    $('#recurringOptions').slideToggle();
                });

                
                $('#caregiverReminders').change(function() {
                    $('#caregiverDetails').slideToggle();
                });
            });

           
            function showStep(step) {
                $('.nav-tabs .nav-link').removeClass('active');
                $('.nav-tabs .nav-link').eq(step-1).addClass('active');
                $('.tab-pane').removeClass('active show');
                $('.tab-pane').eq(step-1).addClass('active show');
            }

          
            $('.time-slot').click(function() {
                if (!$(this).hasClass('booked')) {
                    $('.time-slot').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

          
            function confirmAppointment() {
              
                alert('Appointment confirmed! You will receive a confirmation email shortly.');
     
                const appointment = {
                    date: $('#datepicker').val(),
                    time: $('.time-slot.selected').text(),
                    doctor: $('select').first().val(),
                    department: $('select').last().val(),
                    recurring: $('#recurring').is(':checked'),
                    reminders: {
                        email: $('#emailReminders').is(':checked'),
                        sms: $('#smsReminders').is(':checked'),
                        caregiver: $('#caregiverReminders').is(':checked')
                    }
                };
                
                let appointments = JSON.parse(localStorage.getItem('appointments') || '[]');
                appointments.push(appointment);
                localStorage.setItem('appointments', JSON.stringify(appointments));

               
                window.location.href = 'appointments.html';
            }
		
     function handleLogout() {
            if (confirm('Are you sure you want to logout?')) {
                showNotification('Logging out...');
              
                setTimeout(() => {
                    window.location.href = 'login.html'; 
                }, 1000);
            }
        }

        </script>
